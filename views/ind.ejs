        <div id="app2">

        	<button id="pokaz_formularz_wizyt">Pokaz formularz wizyt</button>

        	<div id="formularz_wizyt" class="hidden">
            	<div class="dane_historii">

                	<span>
                	<label>Pesel</label>
                	<input type="text" id="pesel_osoby" title="Podaj pesel" autofocus/>
                	</span>
            	</div>
            	<div class="dane_historii">
                	<span>
                	<label>Objawy</label>
                	<input type="text" id="objawy" title="Podaj objawy"/>
                	</span>
               	</div>
            	<div class="dane_historii">
                	<span>
                	<label>Zdiagnozowana Choroba</label>
                	<input type="text" id="choroba" title="Podaj nazwę choroby"/>
                	</span>
            	</div>
            	<div class="dane_historii">
                	<span>
                	<label>Leki</label>
                	<input type="text" id="leki" title="Podaj pesel" />
                	</span>
            	</div>
            	<button id="dodaj_wizyte" disabled="true"> Dodaj Wizyte </button>

        	</div>	
        	<div id="ramka_chorobowa" class="hidden">
                <ul id="lista_chorobowa">

                </ul>
            </div>
            <!--
        	<br>
            <button id="usun_historie"> usun historie</button>
            -->
            <br>
            <input type="text" id="pokaz_choroby" />
            <button id="przycisk_pokazywania_chorob"> Pokaz historie</button>
            <br>
            <button id="usun_tabele"> usun baze danych</button>
    	</div>

    	<div id="template1" class="hidden">
        	<ul id="lista_chorob">
            	<li class="choroba">
                	<button class="rozwin_szczegoly_choroby">+</button>
                	<span class="nazwa_choroby"></span>
                	<div class="szczegoly_choroby">
                    	<div class="data"></div>
                    	<div class="objawy"></div>
                    	<div class="leki"></div>
                	</div>
            	</li>
        	</ul>
    	</div>

